<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="be.ciesites.myfirstdatabase.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical">



    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/student_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Student name"
        android:ems="10"> </EditText>

    <Spinner
        android:id="@+id/faculties_spinner"
        android:layout_width="280dp"
        android:layout_height="wrap_content"></Spinner>

    <Button
        android:id="@+id/add_student"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Add Student"
        />

    <Button
        android:id="@+id/delete_engineers"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Delete all engineering students"
        />

    <Button
        android:id="@+id/delete_all_students"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Delete all students"
        />

    <ListView
        android:id="@+id/student_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </ListView>
</LinearLayout>
